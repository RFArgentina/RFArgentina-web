NODE_ENV=production
PORT=3001
SQLITE_PATH=./rfa.db

# Seguridad
JWT_SECRET=replace_with_a_strong_secret_of_32_plus_chars
TRUST_PROXY=true

# Admin
ADMIN_EMAILS=admin@rfargentina.com

# Frontend publico
APP_BASE_URL=https://rfargentina.com
CORS_ORIGINS=https://rfargentina.com,https://www.rfargentina.com

# Auth / Sesion
AUTH_REQUIRE_EMAIL_VERIFICATION=false
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_DAYS=30
REFRESH_TOKEN_COOKIE=rfa_refresh_token
CSRF_COOKIE_NAME=rfa_csrf_token
REFRESH_TOKEN_SECURE_COOKIE=true
REFRESH_TOKEN_SAME_SITE=lax
USER_RETENTION_DAYS=90
DATA_PURGE_INTERVAL_HOURS=24
DB_FLUSH_INTERVAL_MS=1500

# Email (habilitar cuando este operativo SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=14

# Opcional para preflight manual
PRECHECK_TARGET=production
